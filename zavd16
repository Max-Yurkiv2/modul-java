import java.util.Scanner;

interface Shape {
    double GetArea();
}

class Rectangle implements Shape {
    private double A;
    private double B;

    public Rectangle(double A, double B) {
        this.A = A;
        this.B = B;
    }

    @Override
    public double GetArea() {
        return A * B;
    }
}

class Triangle implements Shape {
    private double C;
    private double D;

    public Triangle(double C, double D) {
        this.C = C;
        this.D = D;
    }

    @Override
    public double GetArea() {
        return (C * D) / 2;
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Введіть довжину прямокутника (A): ");
        double A = scanner.nextDouble();
        System.out.print("Введіть ширину прямокутника (B): ");
        double B = scanner.nextDouble();

        System.out.print("Введіть катет прямокутного трикутника (C): ");
        double C = scanner.nextDouble();
        System.out.print("Введіть катет прямокутного трикутника (D): ");
        double D = scanner.nextDouble();

        Shape rectangle = new Rectangle(A, B);
        Shape triangle = new Triangle(C, D);

        System.out.println("Площа прямокутника: " + rectangle.GetArea());
        System.out.println("Площа прямокутного трикутника: " + triangle.GetArea());
    }
}
